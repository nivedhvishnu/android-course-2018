<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fd5337">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:text="Score"
                android:textSize="30sp" />

            <Button
                android:id="@+id/three"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="192dp"
                android:onClick="three"
                android:text="3" />

            <Button
                android:id="@+id/one"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="one"
                android:layout_alignParentTop="true"
                android:layout_marginTop="198dp"
                android:layout_toStartOf="@+id/textView4"
                android:layout_toLeftOf="@id/textView4"
                android:text="1" />

            <Button
                android:id="@+id/two"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/one"
                android:layout_toRightOf="@id/three"
                android:layout_toEndOf="@+id/textView4"
                android:onClick="two"
                android:text="2" />

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="119dp"
                android:onClick="reset"
                android:text="Reset" />

            <TextView
                android:id="@+id/display_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:text="0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3f71f2">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="46dp"
                android:text="Score"
                android:textSize="30sp" />

            <Button
                android:id="@+id/three_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="192dp"
                android:text="3"
                android:onClick="three_1"/>

            <Button
                android:id="@+id/one_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="195dp"
                android:layout_toStartOf="@+id/three_1"
                android:layout_toLeftOf="@id/three_1"
                android:onClick="one_1"
                android:text="1" />

            <Button
                android:id="@+id/two_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/one_1"
                android:layout_toEndOf="@+id/three_1"
                android:layout_toRightOf="@id/three_1"
                android:onClick="two_1"
                android:text="2" />

            <Button
                android:id="@+id/reset_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="118dp"
                android:onClick="reset_1"
                android:text="Reset" />

            <TextView
                android:id="@+id/display_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="119dp"
                android:text="0"
                android:textSize="45dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>